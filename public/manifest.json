  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#dc2626",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["business", "security", "productivity"],
  "lang": "en",
  "dir": "ltr",
  "icons": [
