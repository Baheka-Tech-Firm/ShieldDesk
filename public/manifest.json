    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View security dashboard",
      "url": "/enhanced-dashboard",
      "icons": [{ "src": "/icons/shortcut-dashboard.png", "sizes": "96x96" }]
    },
    {
      "name": "File Vault",
      "short_name": "Vault",
      "description": "Access secure file vault",
      "url": "/enhanced-file-vault",
      "icons": [{ "src": "/icons/shortcut-vault.png", "sizes": "96x96" }]
    },
    {
      "name": "Vulnerability Scanner",
      "short_name": "Scanner",
      "description": "Run security scans",
      "url": "/vulnerability-scanner",
      "icons": [{ "src": "/icons/shortcut-scanner.png", "sizes": "96x96" }]
    },
    {
      "name": "Compliance",
      "short_name": "Compliance",
      "description": "Check compliance status",
      "url": "/compliance",
      "icons": [{ "src": "/icons/shortcut-compliance.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "ShieldDesk Dashboard"
    },
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Dashboard"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "protocol_handlers": [
    {
      "protocol": "web+shielddesk",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/file-vault",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"]
      }
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}